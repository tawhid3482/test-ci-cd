generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  phone     String?  @unique
  role      Role
  avatar    String?
  gender    EGender?
  status    STATUS   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tutors    Tutor[]
}

model OTP {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)

  createdAt DateTime @default(now())
}

model Tutor {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @db.ObjectId
  tutor_id          String   @unique
  background        String[]
  skills            String[]
  institute_name    String?
  department        String?
  year              String?
  bio               String?
  social_link       String?
  present_address   String?
  permanent_address String?

  //tuition location
  district String?
  thana    String?
  area     String[]

  nationality String?
  religion    String?

  //tuition
  classes           String[]
  medium            String[]
  subjects          String[]
  tutor_method      String?
  days_per_week     String?
  availability_days String[]
  available_time    String[]
  expected_salary   String?
  experience        String?
  educational_info  String[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents Document[]
}

model Student {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String @db.ObjectId
  student_id String @unique
}

model WebSetting {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Primary colors
  primaryColor   String?
  secondaryColor String?
  accentColor    String?

  // Text colors
  textColor     String?
  textSecondary String?

  // Backgrounds
  background  String?
  cardBg      String?
  borderColor String?

  // Hover colors
  hoverPrimary   String?
  hoverSecondary String?
  hoverAccent    String?

  // Button styles
  btnBg     String?
  btnHover  String?
  btnActive String?
  btnText   String?

  // Tracking
  fb_pixel           String?
  google_tag_manager String?

  // Meta
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  tutorId     String       @db.ObjectId
  type        DocumentType
  file_url    String
  file_type   String? // PDF or Image
  uploaded_at DateTime     @default(now())

  // Relations
  tutor Tutor @relation(fields: [tutorId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Contact {
  id       String         @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  message  String
  email    String
  priority priorityStatus @default(Normal)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DocumentType {
  MARK_SHEET
  INSTITUTE_ID
}

enum Role {
  SUPER_ADMIN
  ADMIN
  STUDENT
  MANAGER
  TUTOR
}

enum priorityStatus {
  Urgent
  Normal
}

enum STATUS {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum EGender {
  Male
  Female
  Other
}
